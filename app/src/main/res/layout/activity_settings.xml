<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding_icon">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/for_settings">

        <Button
            android:id="@+id/rollback"
            android:layout_width="@dimen/for_settings"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"

            app:icon="@drawable/light_mode"
            app:iconGravity="textStart"
            app:iconTint="@color/night_theme" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_marginStart="@dimen/for_settings"
            android:gravity="center_vertical"
            android:text="@string/settings"
            android:textColor="@color/night_theme"
            android:textSize="@dimen/textSize"
            android:textStyle="bold" />
    </FrameLayout>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_weight="0"
        android:text="@string/night_theme"

        android:textColor="@color/black"
        android:textSize="@dimen/text_size_settings"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_weight="0"

        android:text="@string/give_app"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_settings"

        app:drawableRightCompat="@drawable/share" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_weight="0"

        android:text="@string/support"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_settings"

        app:drawableRightCompat="@drawable/support" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        android:layout_weight="0"

        android:text="@string/user_agree"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_settings"

        app:drawableRightCompat="@drawable/user_agree" />

</LinearLayout>