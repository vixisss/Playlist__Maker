<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MyApp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="12dp"

        android:text="@string/app_name"
        android:textColor="@color/white"

        style="@style/MainTextStyle"/>


    <Button
        android:id="@+id/search_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"

        android:layout_weight="1"
        android:layout_margin="@dimen/radius"

        style="@style/ButtonStyle"

        android:text="@string/search"
        app:icon="@drawable/search" />

    <Button
        android:id="@+id/media_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"

        android:layout_weight="1"
        android:layout_marginStart="@dimen/radius"
        android:layout_marginEnd="@dimen/radius"

        style="@style/ButtonStyle"

        android:text="@string/media"
        app:icon="@drawable/media" />

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_layout_height"

        android:layout_weight="1"
        android:layout_margin="@dimen/radius"

        style="@style/ButtonStyle"

        android:text="@string/settings"
        app:icon="@drawable/group" />


</LinearLayout>