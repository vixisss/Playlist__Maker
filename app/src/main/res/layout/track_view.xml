<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:theme="@style/Theme.MyApp.White">

    <ImageView
        android:id="@+id/artworkUrl100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_gravity="center_vertical" />

    <ImageView
        style="@style/Image_search"
        android:layout_width="@dimen/margin24"
        android:layout_height="@dimen/margin24"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginEnd="@dimen/margin16"
        android:layout_gravity="end"

        android:src="@drawable/user_agree"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="66dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            style="@style/TrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Smells Like Teen Spirit" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistName"
                style="@style/ArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="30"
                tools:text="Nirvana" />


            <TextView
                style="@style/ArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin10"
                android:text="â€¢" />

            <TextView
                android:id="@+id/trackTime"
                style="@style/ArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5:01" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>