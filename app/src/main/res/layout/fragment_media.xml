<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Toolbar
        android:id="@+id/media_toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"

        android:layout_height="@dimen/margin56"
        android:title="@string/media"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorColor="@color/icon_placeholder"
        app:tabIndicatorHeight="2dp"
        android:background="@android:color/transparent"
        app:tabTextAppearance="@style/Tab"
        app:tabSelectedTextColor="@color/icon_placeholder"
        app:tabTextColor="@color/icon_placeholder"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>

