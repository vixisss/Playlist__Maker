<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/icon_placeholder_background"
    android:backgroundTint="@color/icon_placeholder_background"
    app:cardElevation="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icon_placeholder_background"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coverContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/icon_placeholder_background"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/albumPhotoItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/titleItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin16"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/ys_display_regular"

            android:text="Название плейлиста"
            android:textColor="@color/icon_placeholder"
            android:textFontWeight="400"
            android:textSize="@dimen/text12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coverContainer" />

        <TextView
            android:id="@+id/tracksCountItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin16"

            android:fontFamily="@font/ys_display_regular"
            android:text="100 треков"
            android:textColor="@color/icon_placeholder"
            android:textFontWeight="400"
            android:textSize="@dimen/text12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleItem" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>