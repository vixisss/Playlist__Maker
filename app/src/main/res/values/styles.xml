<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text22</item>
    </style>


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="android:letterSpacing">0</item>

        <item name="cornerRadius">@dimen/margin16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/margin5</item>

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/night_theme</item>
        <item name="iconTint">@color/night_theme</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">@dimen/margin10</item>
        <item name="android:paddingStart">@dimen/margin16</item>
        <item name="android:paddingEnd">@dimen/margin16</item>
        <item name="cornerRadius">0dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:letterSpacing">0</item>

        <item name="iconGravity">end</item>

        <item name="android:textColor">@color/night_theme</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/edit_text_lightTheme_text</item>

        <item name="thumbTint">@color/edit_text_lightTheme_text</item>
        <item name="trackTint">@color/edit_text_lightTheme</item>

    </style>


    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/margin10</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

        <item name="android:drawablePadding">@dimen/margin5</item>
        <item name="android:layout_marginStart">@dimen/margin16</item>
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <item name="android:layout_marginEnd">@dimen/margin16</item>

        <item name="android:textCursorDrawable">@drawable/light_cursor</item>
        <item name="android:textColorHint">@color/edit_text_lightTheme_search</item>
        <item name="android:tint">@color/edit_text_lightTheme_text</item>
        <item name="android:drawableTint">@color/edit_text_lightTheme_text</item>

        <item name="android:textColor">@color/night_theme</item>
        <item name="android:background">@drawable/edit_text_light_theme</item>
    </style>


    <style name="Image_search">
        <item name="android:tint">@color/edit_text_lightTheme_text</item>
    </style>

    <style name="ImageTheme" parent="Widget.AppCompat.EditText">
        <item name="android:paddingEnd">@dimen/margin5</item>
        <item name="android:background">@drawable/edit_text_light_theme</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:titleTextColor">@color/night_theme</item>
        <item name="android:titleTextAppearance">@style/MainTextStyle</item>
    </style>

    <style name="ToolbarStylePlaylist">
        <item name="android:titleTextColor">@color/night_theme</item>
        <item name="android:titleTextAppearance">@style/MainTextStyle</item>
        <item name="android:navigationIcon">@drawable/light_mode</item>
    </style>


    <style name="TrackName">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArtistName">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>

        <item name="android:textColor">@color/edit_text_lightTheme_text</item>
    </style>



    <style name="Placeholder_text_noInternet">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <item name="android:textColor">@color/night_theme</item>
        <item name="android:textSize">19sp</item>
        <item name="fontWeight">400</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/margin24</item>
        <item name="android:layout_marginEnd">@dimen/margin24</item>
        <item name="fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="button_in_noInternet">
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/night_theme</item>
        <item name="android:layout_marginTop">@dimen/margin24</item>
        <item name="android:layout_gravity">center</item>

        <item name="fontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="historyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/night_theme</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text19</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="playerText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>

        <item name="android:textColor">@color/night_theme</item>
    </style>

    <style name="playerAttributes">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/night_theme</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="mediaFavTracks">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text19</item>
        <item name="android:textColor">@color/night_theme</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="mediaButtonAddPlaylist">
        <item name="android:backgroundTint">@color/night_theme</item>
        <item name="cornerRadius">@dimen/margin54</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textFontWeight">500</item>
        <item name="lineHeight">16.41sp</item>
    </style>

    <style name="AlbumImage">
        <item name="cornerRadius">@dimen/margin8</item>
    </style>


</resources>