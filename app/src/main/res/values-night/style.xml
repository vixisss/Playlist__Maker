<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/night_theme</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:letterSpacing">0</item>

        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_icon</item>
        <item name="iconTint">@color/night_theme</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingStart">@dimen/radius</item>
        <item name="android:paddingEnd">@dimen/radius</item>
        <item name="android:textAlignment">textStart</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
        <item name="android:letterSpacing">0</item>

        <item name="iconGravity">end</item>
        <item name="iconTint">@color/white</item>

    </style>


    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/margin</item>
        <item name="android:textSize">@dimen/text_size_settings</item>

        <item name="android:drawablePadding">@dimen/padding_icon</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginStart">@dimen/radius</item>
        <item name="android:layout_marginTop">@dimen/radius</item>
        <item name="android:layout_marginEnd">@dimen/radius</item>

        <item name="android:textCursorDrawable">@drawable/light_cursor</item>
        <item name="android:textColorHint">@color/night_theme</item>
        <item name="android:tint">@color/night_theme</item>
        <item name="android:drawableTint">@color/night_theme</item>

        <item name="android:textColor">@color/night_theme</item>
        <item name="android:background">@drawable/edit_text_light_theme</item>
    </style>


    <style name="Image_search">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ImageTheme" parent="Widget.AppCompat.EditText">
        <item name="android:paddingEnd">@dimen/padding_icon</item>
        <item name="android:background">@drawable/edit_text_night_theme</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:titleTextAppearance">@style/MainTextStyle</item>

        <item name="android:navigationIcon">@drawable/light_mode_night</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>


    <style name="TrackName">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ArtistName">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>

        <item name="android:textColor">@color/white</item>
    </style>




    <style name="Placeholder_text_noInternet">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_marginStart">@dimen/img_close</item>
        <item name="android:layout_marginEnd">@dimen/img_close</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="button_in_noInternet">
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/img_close</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/update</item>
        <item name="textAllCaps">false</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/night_theme</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="historyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text19</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>